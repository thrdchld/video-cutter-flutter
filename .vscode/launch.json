{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: Web (Debug)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}",
      "args": ["-d", "web-server", "--web-port=8080"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Flutter: Release APK",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}",
      "args": ["build", "apk", "--release"],
      "console": "integratedTerminal"
    }
  ]
}
